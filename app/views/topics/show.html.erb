<h1><%= @topic.name %></h1>

<%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %></p>
    <!-- #loop over each post belonging to a topic and display each post -->
    <% @topic.posts.each do |post| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <!--# refactor how link to individual posts -->
          <%= link_to post.title, topic_post_path(@topic, post) %>
        </h4>
        <!-- # add submission and comment details for each post in show -->
        <small>
          submitted <%= time_ago_in_words(post.created_at) %> ago
          <br>
          <%= post.comments.count %> Comments
        </small>
      </div>
    </div>
    <% end %>
    <% @topic.sponsored_posts.each do |post| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to post.title, topic_sponsored_post_path(@topic, post) %> (SponsoredPost)
        </h4>
        <small>
          submitted <%= time_ago_in_words(post.created_at) %> ago <br>
        </small>
      </div>
    </div>
    <% end %>


  </div>
  <div class="col-md-4">
    <!-- #replace path to relect route generated in routes.rb -->
    <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
    <%= link_to "New Sponsored Post", new_topic_sponsored_post_path(@topic), class: 'btn btn-success' %>
  </div>
</div>
