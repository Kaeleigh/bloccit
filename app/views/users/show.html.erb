<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
 <!-- call method to get current user avatar-->
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
 <!--use rails image tag to create <img> -->
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>

<!--display user's posts and comments with partials-->
 <h2>Posts</h2>
 <% if users_has_no_post?(@user) %>
    <p><%= @user.name %> has not submitted any posts... yet.</p>
 <% else %>
    <%= render @user.posts %>
 <% end %>

 <h2>Comments</h2>
 <% if users_has_no_comment?(@user) %>
    <p><%= @user.name %> has not submitted any comments... yet.</p>
 <% else %>
    <%= render @user.comments %>
 <% end %>

  <h2>Favorites</h2>
  <% if users_has_no_favorite?(@user) %>
     <p><%= @user.name %> has not favorited any posts... yet.</p>
  <% else %>
     <%= render @favorite_posts %>
  <% end %>
